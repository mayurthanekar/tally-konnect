{
  "name": "tally-konnect",
  "version": "2.0.1",
  "description": "Tally Konnect - Full Utility Suite for Tally Prime + Fynd Commerce Integration",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build:frontend": "cd frontend && npm install && npm run build",
    "package:bridge": "node scripts/package-bridge.js",
    "build": "npm run build:frontend && npm run package:bridge",
    "db:migrate": "node src/db/migrations/run.js up",
    "db:migrate:down": "node src/db/migrations/run.js down",
    "db:seed": "node src/db/seeds/run.js",
    "postinstall": "npm run build:frontend && npm run package:bridge"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "fast-xml-parser": "^4.5.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.3",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "nodemailer": "^8.0.1",
    "papaparse": "^5.4.1",
    "pg": "^8.13.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "uuid": "^10.0.0",
    "xlsx": "^0.18.5",
    "xmlbuilder2": "^3.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "nodemon": "^3.1.7"
  }
}
